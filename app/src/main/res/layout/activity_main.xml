<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/grey"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/forty"
            android:layout_marginVertical="@dimen/forty"
            android:drawableStart="@drawable/cap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_bottom"
            app:layout_constraintTop_toBottomOf="@id/img"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/thirty"
                android:layout_marginVertical="@dimen/fifteen"
                app:layout_constraintTop_toTopOf="parent"
                android:drawableStart="@drawable/new_era"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty"
                android:layout_marginVertical="@dimen/fifteen"
                android:src="@drawable/like"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/_golden"
                android:drawableStart="@drawable/Golden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="@dimen/thirty"
                android:layout_marginVertical="@dimen/forty"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:drawableStart="@drawable/som"
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginVertical="180dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/_Size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/Size"
                android:layout_marginHorizontal="@dimen/twenty"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_price"/>

            <ImageView
                android:src="@drawable/ic_ellipse_40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="33dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_price"/>

            <ImageView
                android:src="@drawable/ic_ellipse_40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="33dp"
                android:layout_marginHorizontal="90dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_price"/>

            <ImageView
                android:src="@drawable/ic_ellipse_40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="33dp"
                android:layout_marginHorizontal="157dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_price"/>

            <ImageView
                android:src="@drawable/ic_ellipse_40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="33dp"
                android:layout_marginHorizontal="220dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_price"/>

            <TextView
                android:id="@+id/_S"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/S"
                android:textSize="@dimen/twenty_five_sp"
                android:fontFamily="@font/s_f_u_i_text_bold"
                android:textColor="@color/black"
                android:layout_marginVertical="22dp"
                android:layout_marginHorizontal="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/_Size"/>

            <TextView
                android:id="@+id/_M"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/M"
                android:textSize="@dimen/twenty_five_sp"
                android:fontFamily="@font/s_f_u_i_text_bold"
                android:textColor="@color/black"
                android:layout_marginVertical="21dp"
                android:layout_marginHorizontal="103dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/_Size"/>

            <TextView
                android:id="@+id/_L"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/L"
                android:textSize="@dimen/twenty_five_sp"
                android:fontFamily="@font/s_f_u_i_text_bold"
                android:textColor="@color/black"
                android:layout_marginVertical="22dp"
                android:layout_marginHorizontal="176dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/_Size"/>

            <TextView
                android:id="@+id/_XL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xl"
                android:textSize="@dimen/twenty_five_sp"
                android:fontFamily="@font/s_f_u_i_text_bold"
                android:textColor="@color/black"
                android:layout_marginVertical="22dp"
                android:layout_marginHorizontal="230dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/_Size"/>

            <TextView
                android:id="@+id/_des"
                android:drawableStart="@drawable/Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="22dp"
                android:layout_marginHorizontal="19dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/_S"/>

            <TextView
                android:drawableStart="@drawable/products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="22dp"
                android:layout_marginHorizontal="19dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/_des"/>











        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>